@* Views/Shared/_UserDashboardLayout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Travel Insurance</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        :root {
            --navy: #001f3d;
            --peach: #f7b980;
            --coral: #ed985f;
            --gray: #e6e6e6;
            --white: #ffffff;
            --text-dark: #0f172a;
        }

        body {
            background-color: var(--gray);
            color: var(--text-dark);
        }

        /* Layout grid: sidebar + main content */
        .dashboard-grid {
            min-height: 100vh;
            display: grid;
            grid-template-columns: 260px 1fr;
        }

        /* Sidebar */
        .sidebar {
            background-color: var(--navy);
            color: var(--white);
            display: grid;
            grid-template-rows: auto 1fr auto; /* brand, menu, signout */
            gap: 1rem;
            padding: 1rem;
        }

        .brand-logo {
            width: 36px;
            height: 36px;
            background: linear-gradient(135deg, var(--peach), var(--coral));
            border-radius: .5rem;
            box-shadow: 0 2px 6px rgba(0,0,0,.25);
        }

        .menu .menu-btn {
            color: var(--white);
            border: 1px solid rgba(255,255,255,0.15);
            border-radius: .6rem;
            text-decoration: none;
            padding: .75rem .9rem;
            display: flex;
            align-items: center;
            gap: .6rem;
            background: rgba(255,255,255,0.06);
            transition: all .2s ease;
        }

            .menu .menu-btn:hover {
                transform: translateY(-1px);
                background: rgba(255,255,255,0.12);
                border-color: rgba(255,255,255,0.25);
            }

        .menu .icon {
            width: 26px;
            height: 26px;
            border-radius: .4rem;
            background: linear-gradient(135deg, var(--peach), var(--coral));
            color: var(--navy);
            font-weight: 700;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        .btn-signout {
            width: 100%;
            border-radius: .6rem;
            background-color: #e06a5f;
            border: none;
            color: var(--white);
            font-weight: 600;
            padding: .75rem .9rem;
        }

            .btn-signout:hover {
                filter: brightness(.95);
            }

        /* Main content padding */
        .content-wrap {
            padding: 1.25rem;
        }

    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="dashboard-grid">
        <!-- Sidebar (common across user pages) -->
        <aside class="sidebar">
            <!-- Brand -->
            <div class="d-flex align-items-center gap-2">
                
                <strong class="fs-6">Travel Buddy</strong>
            </div>

            <!-- Menu -->
            <nav class="menu d-flex flex-column gap-2" aria-label="User Navigation">

                <a class="menu-btn" asp-controller="UserDashboard" asp-action="Claims">
                    <span class="icon">C</span> <span>Claims</span>
                </a>


                <a class="menu-btn" asp-controller="UserDashboard" asp-action="Policies">
                    <span class="icon">P</span> <span>Policies</span>
                </a>

                <a class="menu-btn" asp-controller="UserDashboard" asp-action="RaiseTicket">
                    <span class="icon">T</span> <span>Raise Ticket</span>
                </a>
                
            </nav>

            <!-- Sign out (bottom) -->
            <div>
                @* If using Identity, sign-out should be a POST form *@
                @* Example POST form (recommended):
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-signout">
                        <span class="me-1">⎋</span> Sign out
                    </button>
                </form>
                *@

                @* Simple link (GET) – only if your logout uses GET *@
                <a class="btn btn-signout btn-logout" asp-controller="Account" asp-action="Logout">
                    <span class="me-1">⎋</span> Sign out
                </a>
            </div>
        </aside>

        <!-- Page body goes here -->
        <main class="content-wrap">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            // Handle Logout Click
            $('.btn-logout').on('click', function (e) {
                e.preventDefault();
                localStorage.removeItem("isLoggedIn");
                localStorage.removeItem("userRole");
                localStorage.removeItem("userEmail");
                window.location.href = '/Home/Index';
            });

            // SECURITY CHECK
            if (localStorage.getItem("isLoggedIn") !== "true") {
                window.location.href = '/Home/SignIn';
            }
        });
    </script>

   
</body>
</html>
