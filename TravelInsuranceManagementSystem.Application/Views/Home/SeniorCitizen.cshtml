@* Views/Home/SeniorCitizen.cshtml *@
@{
    Layout = "_Layout"; // Optional if Views/_ViewStart.cshtml sets it globally
    ViewData["Title"] = "Senior Citizen Travel Insurance | Travel Buddy";
}

@section Styles {
    <style>
        /* THEME TOKENS */
        :root {
            --navy: #001f3d;
            --accent: #ed985f;
            --accent-2: #F7b980;
            --text: #1a1a1a;
            --text-muted: #495057;
            --card-bg: #ffffff;
            --page-bg: #f5f7fb;
            --divider: #d9d9d9;
        }

        /* GLOBAL */
        body {
            font-family: "Segoe UI", sans-serif;
            background-color: var(--page-bg); /* improved contrast vs #001f3d */
            color: var(--text);
            scroll-behavior: smooth;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        /* HERO SECTION */
        .hero {
            background: linear-gradient(rgba(0, 31, 61, 0.85), rgba(0, 31, 61, 0.85)), url("https://images.unsplash.com/photo-1500530855697-b586d89ba3ee");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: #fff;
            padding: 90px 20px;
            border-radius: 0 0 26px 26px;
            text-align: center;
            position: relative;
        }

            .hero h1 {
                font-weight: 700;
                letter-spacing: .3px;
                margin-bottom: 8px;
            }

            .hero p {
                margin: 0 auto;
                max-width: 820px;
                color: #e9f0f8;
                font-size: 1rem;
            }

        /* COMMON SECTION (white panels) */
        .section {
            background: var(--card-bg);
            padding: 40px 32px;
            margin-bottom: 28px;
            border-radius: 18px;
            box-shadow: 0 8px 22px rgba(0,0,0,0.08);
            opacity: 1; /* guard against inherited opacity */
        }

            .section h3 {
                color: var(--navy);
                margin-bottom: 22px;
                font-weight: 700;
            }

            /* Ensure everything inside white sections uses dark text */
            .section, .section * {
                color: var(--text);
            }

        .highlight {
            color: var(--accent);
            font-weight: 600;
        }

        /* FORM (traveler selection) */
        .form-select {
            max-width: 280px;
            border-radius: 10px;
            border: 1px solid #e2e6ee;
            box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        }

        /* PLAN CARDS */
        .plan-card {
            border-radius: 16px;
            background: var(--card-bg);
            padding: 26px;
            position: relative;
            height: 100%;
            transition: transform 0.25s ease, box-shadow 0.25s ease;
            border: 1px solid #eef0f4;
            box-shadow: 0 6px 16px rgba(0,0,0,0.06);
            opacity: 1; /* guard against inherited opacity */
        }

            .plan-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 12px 24px rgba(0,0,0,0.10);
            }

        .premium {
            border: 2px solid var(--accent-2);
        }

        .badge-premium {
            position: absolute;
            top: -12px;
            right: 18px;
            background: var(--accent-2);
            color: var(--navy);
            padding: 6px 12px;
            border-radius: 14px;
            font-size: 12px;
            font-weight: 700;
            box-shadow: 0 4px 10px rgba(0,0,0,0.12);
        }

        .price {
            font-size: 24px;
            font-weight: 700;
            color: var(--navy);
            margin-bottom: 10px;
        }

        /* Buttons: solid, high contrast */
        .btn-basic {
            background: var(--navy);
            color: #fff;
            border-radius: 10px;
            border: none;
            padding: 10px 14px;
        }

            .btn-basic:hover, .btn-basic:focus {
                background: #02284f;
                color: #fff;
            }

        .btn-premium {
            background: var(--accent);
            color: #fff;
            border-radius: 10px;
            border: none;
            padding: 10px 14px;
        }

            .btn-premium:hover, .btn-premium:focus {
                background: #e27f3f;
                color: #fff;
            }

        /* INFO CARDS */
        .info-card {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 24px;
            height: 100%;
            border-left: 6px solid var(--accent);
            border: 1px solid #eef0f4;
            box-shadow: 0 6px 16px rgba(0,0,0,0.06);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            opacity: 1; /* guard against inherited opacity */
        }

            .info-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 12px 24px rgba(0,0,0,0.10);
            }

            .info-card h5 {
                font-weight: 700;
                margin-bottom: 14px;
                color: var(--navy);
            }

            .info-card ul {
                list-style: none;
                padding-left: 0;
                margin: 0;
            }

                .info-card ul li {
                    padding: 9px 0;
                    border-bottom: 1px dashed var(--divider);
                    color: var(--text-muted); /* ensure visible but secondary */
                }

                    .info-card ul li:last-child {
                        border-bottom: none;
                    }

        /* CLAIM STEPS */
        .claim-step {
            padding: 10px 12px;
            margin-bottom: 10px;
            border-radius: 10px;
            background-color: #fff7f1; /* stronger than #fdf3eb */
            border: 1px solid #ffe1c7;
            color: var(--text);
            transition: transform 0.2s ease, background-color 0.2s ease;
            opacity: 1; /* guard against inherited opacity */
        }

            .claim-step:hover {
                transform: translateX(3px);
                background-color: #ffe9d6;
            }

        /* Utility: make sure cards never inherit unexpected opacity/filter */
        .section .card, .section .info-card, .section .plan-card {
            opacity: 1 !important;
            filter: none !important;
        }
    </style>
}

<div class="hero" role="banner" aria-label="Senior Citizen Travel Insurance hero section">
    <h1>Senior Citizen Travel Insurance</h1>
    <p class="mt-3">
        Golden Years, Worry-Free Travels (Ages 60-85) — powered by <b>Travel Buddy</b>
    </p>
</div>

<div class="container my-5">

    <!-- Traveler selection -->
    <div class="section">
        <h3>Select Travelers</h3>
        <label for="members" class="form-label">Number of travelers</label>
        <select class="form-select" id="members" onchange="updatePremium()" aria-label="Select number of travelers">
            <option value="1">1 Traveler</option>
            <option value="2">2 Travelers</option>
            <option value="3">3 Travelers</option>
            <option value="4">4 Travelers</option>
        </select>
    </div>

    <!-- Plans -->
    <div class="row g-4 mb-5">
        <div class="col-md-6">
            <div class="plan-card shadow h-100">
                <h4>Basic Plan</h4>
                <p class="highlight">Coverage up to ₹10,00,000</p>
                <p class="price">₹ <span id="basicPrice">2500</span></p>
                <ul>
                    <li>Medical emergency – up to ₹5,00,000</li>
                    <li>Trip cancellation – up to ₹50,000</li>
                    <li>Lost luggage – up to ₹25,000</li>
                    <li>No medical test required</li>
                </ul>
                <a href="/Home/FamilyInsuranceForm">
                <button type="button" class="btn btn-basic w-100" aria-label="Choose Basic Plan">
                    Choose Basic
                </button>
                </a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="plan-card premium shadow h-100 position-relative">
                <div class="badge-premium">Recommended</div>
                <h4>Premium Plan</h4>
                <p class="highlight">Coverage up to ₹50,00,000</p>
                <p class="price">₹ <span id="premiumPrice">4500</span></p>
                <ul>
                    <li>Medical emergency – up to ₹25,00,000</li>
                    <li>Pre-existing condition support</li>
                    <li>Trip cancellation – up to ₹2,00,000</li>
                    <li>COVID-19 Hospitalization</li>
                </ul>
                <a href="/Home/FamilyInsuranceForm">
                <button type="button" class="btn btn-premium w-100" aria-label="Choose Premium Plan">
                    Choose Premium
                </button>
                </a>
            </div>
        </div>
    </div>

    <!-- Why Buy & Eligibility -->
    <div class="section">
        <h3>Why Buy &amp; Eligibility</h3>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="info-card h-100">
                    <h5>Why Seniors Need This?</h5>
                    <ul>
                        <li>Healthcare abroad is 3x–5x costlier</li>
                        <li>Covers age-related sudden illnesses</li>
                        <li>Financial security against delays</li>
                        <li>24/7 Medical Concierge support</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <div class="info-card h-100">
                    <h5>Eligibility Criteria</h5>
                    <ul>
                        <li>Minimum age 60, Maximum 85 years</li>
                        <li>Must be a resident of origin country</li>
                        <li>Valid for single trips up to 180 days</li>
                        <li>Medical history declaration required</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Coverage -->
    <div class="section">
        <h3>Coverage Details</h3>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="info-card h-100">
                    <h5>What is Covered</h5>
                    <ul>
                        <li>Medical emergencies</li>
                        <li>Trip cancellation</li>
                        <li>Lost luggage</li>
                        <li>Compassionate Family Visit</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <div class="info-card h-100">
                    <h5>What is Not Covered</h5>
                    <ul>
                        <li>Undeclared pre-existing conditions</li>
                        <li>Adventure sports (Bungee, Scuba, etc.)</li>
                        <li>Self-inflicted injuries</li>
                        <li>Alcohol or drug-related incidents</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Benefits & Why Choose Us -->
    <div class="section">
        <h3>Benefits &amp; Why Choose Us</h3>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="info-card h-100">
                    <h5>Benefits of Senior Plans</h5>
                    <ul>
                        <li>Cashless hospitalization network</li>
                        <li>Tele-consultation with home doctors</li>
                        <li>Dedicated senior claim team</li>
                        <li>Stress-free retirement travel</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <div class="info-card h-100">
                    <h5>Why Choose Travel Buddy?</h5>
                    <ul>
                        <li>Transparent exclusions (No hidden clauses)</li>
                        <li>Fast track claims for seniors</li>
                        <li>Customer-first approach</li>
                        <li>Trusted by 10,000+ senior travelers</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Claim Process -->
    <div class="section">
        <h3>Claim Process</h3>
        <div class="info-card">
            <div class="claim-step">Login to Travel Buddy</div>
            <div class="claim-step">Select your Senior Citizen policy</div>
            <div class="claim-step">Upload hospital bills or reports</div>
            <div class="claim-step">Priority Verification by medical board</div>
            <div class="claim-step">Approved amount credited</div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updatePremium() {
            // Senior Logic: Per person pricing (Base price * Number of Members)
            const members = parseInt(document.getElementById("members").value, 10);
            const basicPerPerson = 2500;
            const premiumPerPerson = 4500;

            document.getElementById("basicPrice").innerText = basicPerPerson * members;
            document.getElementById("premiumPrice").innerText = premiumPerPerson * members;
        }
        // Initialize prices on page load in case default select changes elsewhere
        document.addEventListener('DOMContentLoaded', updatePremium);
    </script>
}
