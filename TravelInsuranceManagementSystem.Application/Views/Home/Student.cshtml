
@{
    ViewData["Title"] = "Student Travel Insurance – Travel Buddy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Styles {

    <style>
        body {
                font-family: "Segoe UI", sans-serif;
                background-color: #001f3d;
                scroll-behavior: smooth;
            }

            
            .hero {
                background:
                    linear-gradient(rgba(0,31,61,0.8), rgba(0,31,61,0.8)),
                    url("https://images.unsplash.com/photo-1500530855697-b586d89ba3ee");
                background-size: cover;
                background-position: center;
                color: white;
                padding: 90px 20px;
                border-radius: 0 0 30px 30px;
                text-align: center;
            }

            .hero h1 {
                font-weight: 700;
            }

            /* COMMON SECTION */
            .section {
                background: white;
                padding: 50px 40px;
                margin-bottom: 30px;
                border-radius: 20px;
            }

            .section h3 {
                color: #001f3d;
                margin-bottom: 30px;
            }

            .highlight {
                color: #ed985f;
                font-weight: bold;
            }

            /* PLAN CARDS */

            .plan-card {
                border-radius: 20px;
                background: white;
                padding: 30px;
                position: relative;
                height: 100%;
                transition: all 0.35s ease-in-out;
            }

            .plan-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 40px rgba(0, 31, 61, 0.25);
            }

            .premium {
                border: 3px solid #F7b980;
            }

            .badge-premium {
                position: absolute;
                top: -15px;
                right: 25px;
                background: #F7b980;
                color: #001f3d;
                padding: 6px 16px;
                border-radius: 20px;
                font-size: 12px;
                font-weight: bold;
            }

            .price {
                font-size: 28px;
                font-weight: bold;
                color: #001f3d;
            }

            .btn-basic {
                background: #001f3d;
                color: white;
                border-radius: 12px;
            }

            .btn-premium {
                background: #ed985f;
                color: white;
                border-radius: 12px;
            }

            /* INFO CARDS */
            .info-card {
                background: #ffffff;
                border-radius: 18px;
                padding: 30px;
                height: 100%;
                border-left: 6px solid #ed985f;
                transition: all 0.35s ease-in-out;
            }

            .info-card h5 {
                font-weight: 600;
                margin-bottom: 20px;
                color: #001f3d;
            }

            .info-card ul {
                list-style: none;
                padding-left: 0;
            }

            .info-card ul li {
                padding: 10px 0;
                border-bottom: 1px dashed #e6e6e6;
            }

            .info-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            }

            /* CLAIM STEPS */
            .claim-step {
                padding: 12px 15px;
                margin-bottom: 12px;
                border-radius: 10px;
                background-color: #fdf3eb;
                transition: all 0.3s ease-in-out;
            }

            .claim-step:hover {
                transform: translateX(6px);
                background-color: #fbe4d6;
            }
    </style>
}

