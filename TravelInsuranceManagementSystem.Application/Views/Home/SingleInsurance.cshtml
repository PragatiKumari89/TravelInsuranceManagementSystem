@* Views/Home/SingleInsurance.cshtml *@
@{
    Layout = "_Layout"; // Optional if Views/_ViewStart.cshtml already sets it
    ViewData["Title"] = "Single Travel Insurance | Travel Buddy";
}


@section Styles {
    <style>
        /* GLOBAL */
        :root {
            --navy: #001f3d;
            --accent: #ed985f;
            --accent-2: #F7b980;
            --text: #1a1a1a; /* Primary text (dark) */
            --text-muted: #495057; /* Secondary text */
            --card-bg: #ffffff; /* Card background */
            --page-bg: #f5f7fb; /* Optional light page bg for contrast */
            --divider: #d9d9d9;
        }

        /* Use a lighter page bg so white cards are readable against it */
        body {
            font-family: "Segoe UI", sans-serif;
            background-color: var(--page-bg); /* was #001f3d */
            color: var(--text);
            scroll-behavior: smooth;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        /* HERO (kept dark/navy look for headline section) */
        .hero {
            background: linear-gradient(rgba(0,31,61,0.85), rgba(0,31,61,0.85)), url("https://images.unsplash.com/photo-1500530855697-b586d89ba3ee");
            background-size: cover;
            background-position: center;
            color: #fff;
            padding: 80px 20px;
            border-radius: 0 0 26px 26px;
            text-align: center;
        }

            .hero h1 {
                font-weight: 700;
                letter-spacing: 0.3px;
                margin-bottom: 8px;
            }

            .hero p {
                margin: 0 auto;
                max-width: 820px;
                color: #e9f0f8;
                font-size: 1rem;
            }

        /* COMMON SECTION (white panels) */
        .section {
            background: var(--card-bg);
            padding: 42px 32px;
            margin-bottom: 28px;
            border-radius: 18px;
            box-shadow: 0 8px 22px rgba(0,0,0,0.08);
            opacity: 1; /* guard against inherited opacity */
        }

            .section h3 {
                color: var(--navy);
                margin-bottom: 22px;
                font-weight: 700;
            }

            /* Ensure everything inside white sections uses dark text */
            .section, .section * {
                color: var(--text);
            }

        .highlight {
            color: var(--accent);
            font-weight: 600;
        }

        /* PLAN CARDS */
        .plan-card {
            border-radius: 16px;
            background: var(--card-bg);
            padding: 26px;
            position: relative;
            height: 100%;
            transition: transform 0.25s ease, box-shadow 0.25s ease;
            border: 1px solid #eef0f4;
            box-shadow: 0 6px 16px rgba(0,0,0,0.06);
            opacity: 1; /* guard against inherited opacity */
        }

            .plan-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 12px 24px rgba(0,0,0,0.10);
            }

        .premium {
            border: 2px solid var(--accent-2);
        }

        .badge-premium {
            position: absolute;
            top: -12px;
            right: 18px;
            background: var(--accent-2);
            color: var(--navy);
            padding: 6px 12px;
            border-radius: 14px;
            font-size: 12px;
            font-weight: 700;
            box-shadow: 0 4px 10px rgba(0,0,0,0.12);
        }

        .price {
            font-size: 24px;
            font-weight: 700;
            color: var(--navy);
            margin-bottom: 10px;
        }

        /* Buttons: solid, high contrast */
        .btn-basic {
            background: var(--navy);
            color: #fff;
            border-radius: 10px;
            border: none;
            padding: 10px 14px;
        }

            .btn-basic:hover, .btn-basic:focus {
                background: #02284f;
                color: #fff;
            }

        .btn-premium {
            background: var(--accent);
            color: #fff;
            border-radius: 10px;
            border: none;
            padding: 10px 14px;
        }

            .btn-premium:hover, .btn-premium:focus {
                background: #e27f3f;
                color: #fff;
            }

        /* INFO CARDS */
        .info-card {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 24px;
            height: 100%;
            border-left: 6px solid var(--accent);
            border: 1px solid #eef0f4;
            box-shadow: 0 6px 16px rgba(0,0,0,0.06);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            opacity: 1; /* guard against inherited opacity */
        }

            .info-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 12px 24px rgba(0,0,0,0.10);
            }

            .info-card h5 {
                font-weight: 700;
                margin-bottom: 14px;
                color: var(--navy);
            }

            .info-card ul {
                list-style: none;
                padding-left: 0;
                margin: 0;
            }

                .info-card ul li {
                    padding: 9px 0;
                    border-bottom: 1px dashed var(--divider);
                    color: var(--text-muted); /* ensure visible but secondary */
                }

                    .info-card ul li:last-child {
                        border-bottom: none;
                    }

        /* CLAIM STEPS */
        .claim-step {
            padding: 10px 12px;
            margin-bottom: 10px;
            border-radius: 10px;
            background-color: #fff7f1; /* slightly stronger than #fdf3eb */
            border: 1px solid #ffe1c7;
            color: var(--text);
            transition: transform 0.2s ease, background-color 0.2s ease;
            opacity: 1; /* guard against inherited opacity */
        }

            .claim-step:hover {
                transform: translateX(3px);
                background-color: #ffe9d6;
            }

        /* Utility: make sure cards never inherit unexpected opacity */
        .section .card, .section .info-card, .section .plan-card {
            opacity: 1 !important;
            filter: none !important;
        }
    </style>
}

<!-- HERO -->
<div class="hero" role="banner" aria-label="Single Travel Insurance hero section">
    <h1>Single Travel Insurance</h1>
    <p class="mt-3">
        One single-trip policy designed to protect individual travellers — powered by
        <b>Travel Buddy</b>
    </p>
</div>

<div class="container my-5">

    <!-- PLANS -->
    <div class="row g-4 mb-5">

        <!-- BASIC -->
        <div class="col-md-6">
            <div class="plan-card shadow h-100">
                <h4>Basic Plan</h4>
                <p class="highlight">Coverage up to ₹5,00,000</p>
                <p class="price" aria-label="Basic plan price">₹ 3,000</p>
                <ul>
                    <li>Medical emergency – up to ₹2,00,000</li>
                    <li>Trip cancellation – up to ₹30,000</li>
                    <li>Lost luggage – up to ₹15,000</li>
                </ul>
                <a href="/Home/FamilyInsuranceForm">
                <!-- If you have an action, add asp-route or asp-action -->
                <button type="button" class="btn btn-basic w-100" aria-label="Choose Basic Plan">
                    Choose Basic
                </button>
                </a>
            </div>
        </div>

        <!-- PREMIUM -->
        <div class="col-md-6">
            <div class="plan-card premium shadow h-100 position-relative">
                <div class="badge-premium">Recommended</div>
                <h4>Premium Plan</h4>
                <p class="highlight">Coverage up to ₹10,00,000</p>
                <p class="price" aria-label="Premium plan price">₹ 5,000</p>
                <ul>
                    <li>Medical emergency – up to ₹5,00,000</li>
                    <li>Trip cancellation – up to ₹1,00,000</li>
                    <li>Lost luggage – up to ₹50,000</li>
                </ul>
                <a href="/Home/FamilyInsuranceForm">
                <button type="button" class="btn btn-premium w-100" aria-label="Choose Premium Plan">
                    Choose Premium
                </button>
                </a>
            </div>
        </div>
    </div>

    <!-- WHY BUY + ELIGIBILITY -->
    <div class="section">
        <h3>Why Buy Single Travel Insurance &amp; Eligibility</h3>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="info-card h-100">
                    <h5>Why Should You Buy?</h5>
                    <ul>
                        <li>Protection for solo travellers</li>
                        <li>Covers medical and travel emergencies</li>
                        <li>Avoid unexpected financial loss</li>
                        <li>Peace of mind during international trips</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <div class="info-card h-100">
                    <h5>Eligibility Criteria</h5>
                    <ul>
                        <li>Applicable for one individual</li>
                        <li>Valid for a single trip</li>
                        <li>Traveller must be above 18 years</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- COVERAGE -->
    <div class="section">
        <h3>Coverage Details</h3>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="info-card h-100">
                    <h5>What is Covered</h5>
                    <ul>
                        <li>Medical emergencies</li>
                        <li>Trip cancellation</li>
                        <li>Baggage loss or delay</li>
                        <li>Accidental injuries</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <div class="info-card h-100">
                    <h5>What is Not Covered</h5>
                    <ul>
                        <li>Pre-existing medical conditions</li>
                        <li>Alcohol or drug-related incidents</li>
                        <li>Adventure sports</li>
                        <li>Negligence-related losses</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- BENEFITS + TRAVEL BUDDY -->
    <div class="section">
        <h3>Benefits &amp; Why Choose Travel Buddy</h3>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="info-card h-100">
                    <h5>Benefits of Single Travel Insurance</h5>
                    <ul>
                        <li>Affordable premium</li>
                        <li>Easy claim handling</li>
                        <li>Tailored for individual travellers</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <div class="info-card h-100">
                    <h5>Why Choose Travel Buddy?</h5>
                    <ul>
                        <li>Transparent plans</li>
                        <li>Fast claim processing</li>
                        <li>Customer-first approach</li>
                        <li>Trusted travel insurance partner</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- CLAIM PROCESS -->
    <div class="section">
        <h3>Claim Process</h3>
        <div class="info-card">
            <div class="claim-step">Login to Travel Buddy</div>
            <div class="claim-step">Select your policy</div>
            <div class="claim-step">Submit claim details</div>
            <div class="claim-step">Verification by our team</div>
            <div class="claim-step">Approved amount credited</div>
        </div>
    </div>
</div>
