@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    //ViewData["Title"] = "Payments";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="m-0">Payments</h2>
    <div class="btn-group" role="group">
        <button class="btn btn-outline-primary payments-status-btn active" data-status="All">All</button>
        <button class="btn btn-outline-primary payments-status-btn" data-status="Success">Success</button>
        <button class="btn btn-outline-primary payments-status-btn" data-status="Pending">Pending</button>
        <button class="btn btn-outline-primary payments-status-btn" data-status="Failed">Failed</button>
    </div>
</div>

<div class="row g-2 mb-3">
    <div class="col-12 col-md-6">
        <input id="paymentsSearch" class="form-control" placeholder="Search payments..." />
    </div>
    <div class="col-12 col-md-6 text-md-end">
        <button id="exportPayments" class="btn btn-primary">Export CSV</button>
    </div>
</div>

<div class="table-responsive">
    <table id="paymentsTable" class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th>User ID</th>
                <th>Policy ID</th>
                <th>Payment ID</th>
                <th>Plan</th>
                <th>Amount</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <tr data-status="Success">
                <td>U001</td>
                <td>P01015</td>
                <td>PAY-8821</td>
                <td>Basic</td>
                <td>₹3,500</td>
                <td>2023-04-01</td>
                <td>2024-04-01</td>
                <td>2023-04-02</td>
                <td><span class="badge-pill badge-approved">Success</span></td>
            </tr>
            <tr data-status="Pending">
                <td>U002</td>
                <td>P01116</td>
                <td>PAY-9932</td>
                <td>Premium</td>
                <td>₹2,200</td>
                <td>2023-04-01</td>
                <td>2023-04-01</td>
                <td>2023-04-01</td>
                <td><span class="badge-pill badge-pending">Pending</span></td>
            </tr>
            <tr data-status="Failed">
                <td>U003</td>
                <td>P01037</td>
                <td>PAY-7741</td>
                <td>Premium</td>
                <td>₹1,580</td>
                <td>2023-11-20</td>
                <td>2024-11-20</td>
                <td>2023-11-20</td>
                <td><span class="badge-pill badge-rejected">Failed</span></td>
            </tr>
        </tbody>
    </table>
</div>