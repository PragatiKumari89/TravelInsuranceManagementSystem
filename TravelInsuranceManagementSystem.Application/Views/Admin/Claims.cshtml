@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    //ViewData["Title"] = "Claims";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="m-0">Claims</h2>
    <div class="btn-group" role="group">
        <button class="btn btn-outline-primary claims-status-btn active" data-status="All">All</button>
        <button class="btn btn-outline-primary claims-status-btn" data-status="Open">Open</button>
        <button class="btn btn-outline-primary claims-status-btn" data-status="Approved">Approved</button>
        <button class="btn btn-outline-primary claims-status-btn" data-status="Rejected">Rejected</button>
    </div>
</div>

<div class="row g-2 mb-3">
    <div class="col-12 col-md-6">
        <input id="claimsSearch" class="form-control" placeholder="Search claims..." />
    </div>
    <div class="col-12 col-md-6 text-md-end">
        <button id="exportClaims" class="btn btn-primary">Export CSV</button>
    </div>
</div>

<div class="table-responsive">
    <table id="claimsTable" class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th>Policy ID</th>
                <th>Customer ID</th>
                <th>Customer Name</th>
                <th>Plan</th>
                <th>Coverage Type</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Status</th>
                <th>Agent</th>
            </tr>
        </thead>
        <tbody>
            <tr data-status="Open">
                <td>P01842</td>
                <td>CUS-8821</td>
                <td>John Doe</td>
                <td>Basic</td>
                <td>Medical</td>
                <td>$5,500</td>
                <td>2023-05-10</td>
                <td><span class="badge-pill badge-open">Open</span></td>
                <td><span class="text-muted fst-italic">Unassigned</span></td>
            </tr>

            <tr data-status="Approved">
                <td>P01037</td>
                <td>CUS-9932</td>
                <td>Jane Smith</td>
                <td>Premium</td>
                <td>Trip Cancellation</td>
                <td>$2,200</td>
                <td>2023-09-01</td>
                <td><span class="badge-pill badge-approved">Approved</span></td>
                <td>Sarah Jenkins</td>
            </tr>

            <tr data-status="Rejected">
                <td>P01016</td>
                <td>CUS-7741</td>
                <td>Michael Scott</td>
                <td>Premium</td>
                <td>Medical</td>
                <td>$3,200</td>
                <td>2024-01-17</td>
                <td><span class="badge-pill badge-rejected">Rejected</span></td>
                <td>Mike Ross</td>
            </tr>
        </tbody>
    </table>
</div>